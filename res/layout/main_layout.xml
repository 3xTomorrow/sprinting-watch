<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/reachGoalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Sprint Timer"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- RSSI Display -->
    <LinearLayout
        android:id="@+id/rssiContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reachGoalText"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="@android:drawable/dialog_holo_light_frame">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="RSSI"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="8sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rssiText"
            android:layout_width="78dp"
            android:layout_height="21dp"
            android:text="Not scanning"
            android:textColor="#2196F3"
            android:textSize="8sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Reached Finish Line Display -->

    <!-- Elapsed Time Display -->

    <!-- Control Buttons -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="176dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="42dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start_button"
            android:layout_width="40dp"
            android:layout_height="29dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:text="Start"
            android:textSize="8sp" />

        <Button
            android:id="@+id/pause_button"
            android:layout_width="34dp"
            android:layout_height="29dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="Pause"
            android:textSize="8sp" />

        <Button
            android:id="@+id/reset_button"
            android:layout_width="44dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:backgroundTint="#F44336"
            android:text="Reset"
            android:textSize="8sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/elapsedTimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time here"
        android:textAlignment="center" />

</RelativeLayout>